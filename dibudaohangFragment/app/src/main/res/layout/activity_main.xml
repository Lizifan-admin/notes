<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_FFC4C4C4">
        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/color_000000"
            android:text="信息" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_FFFFFF"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_FFFFFF">

        <RelativeLayout
            android:id="@+id/rl_channel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_channel"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="提醒"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />
            <TextView
                android:id="@+id/channel_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:text="99+"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@mipmap/bg_num"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_message"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="信息"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />
            <TextView
                android:id="@+id/message_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:text="99+"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@mipmap/bg_num"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_better"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/better"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_better"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />
            <TextView
                android:id="@+id/better_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:text="99+"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@mipmap/bg_num"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_my"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="设置"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />
            <ImageView
                android:id="@+id/my_red"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/partner_red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="38dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_FFFFFF"
        android:layout_above="@id/ly_tab_bar"/>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_top_bar"
        android:layout_above="@id/ly_tab_bar">
    </FrameLayout>



</RelativeLayout>